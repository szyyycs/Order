<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aa"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >


<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    android:layout_marginBottom="60dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/info"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="#fff"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/icon"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:src="@mipmap/iconblank"
            android:scaleType="centerCrop"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录名："
            android:id="@+id/name"
            android:textColor="#393a3b"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/icon"
            android:textSize="21sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:id="@+id/nickname"
            android:textColor="#393a3b"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/name"
            android:textSize="21sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前的账号："
            android:id="@+id/zhanghao"
            android:textColor="#58595b"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/icon"
            android:layout_below="@id/name"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/zhanghao"
            android:text="账号"
            android:textColor="#5b5e60"
            android:layout_below="@id/name"
            android:textSize="15sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ed_shape"
        android:layout_marginTop="40dp"
        >

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:id="@+id/history"
            >
            <TextView
                android:id="@+id/lishi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/lishi"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/dingdan"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lishi"
                android:layout_alignParentBottom="true"
                android:text="历史订单"
                android:textColor="#444"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textSize="15sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/comment"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"

            >
            <TextView
                android:id="@+id/commenttv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/comment"
                android:layout_centerHorizontal="true"
                />

            <TextView

                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/commenttv"
                android:layout_alignParentBottom="true"
                android:text="我的评价"
                android:textColor="#444"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textSize="15sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/shoucang1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/shoucang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@mipmap/shoucang"
                android:layout_centerHorizontal="true"
                />

            <TextView

                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shoucang"
                android:layout_alignParentBottom="true"
                android:text="我的收藏"
                android:textColor="#444"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>



    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:id="@+id/see_tiem"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/location"
           android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/term"
            />

        <TextView
            android:id="@+id/myaddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/term"
            android:layout_marginLeft="10dp"
            android:text="我的地址"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textColor="#111"
            android:background="#fff"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:id="@+id/safety"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/safe"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/safe"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/safe"
            android:text="账户安全"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textColor="#111"
            android:background="#fff"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:id="@+id/clear_all"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/set"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:id="@+id/clear"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/clear"
            android:text="通用设置"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textColor="#111"
            android:background="#fff"
            android:textSize="20sp" />
    </RelativeLayout>




    <RelativeLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:id="@+id/about_us"
        >
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/about"
            android:layout_centerVertical="true"
            android:id="@+id/about"
            android:layout_marginLeft="15dp"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/about"
            android:text="关于更多"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textColor="#111"
            android:background="#fff"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/exit"
        android:text="退出当前账号"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:paddingTop="8dp"
        android:background="#fff"
        android:textSize="20sp"
        android:textColor="#e9672c"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/exitall"
        android:text="退出程序"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:paddingTop="8dp"
        android:background="#fff"
        android:textSize="20sp"
        android:textColor="#e9672c"
        />
<TextView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="0dp"
    android:background="#eee"
    />

</LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>