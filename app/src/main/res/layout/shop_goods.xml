<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:id="@+id/shop_item"
    >

    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/ed_shape"
        android:id="@+id/ee">
        <ImageView

            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"

            android:id="@+id/goods_icon"
            android:scaleType="centerCrop"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="65dp"
            >

            <TextView

                android:id="@+id/goods_name"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="0dp"
                android:text="可口可乐(尝鲜价单点不送)"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textColor="#333"
                android:background="#fff"
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_marginLeft="50dp"

                android:layout_marginTop="73dp"
                android:textColor="#E75A48"
                android:background="#fff"
                android:textSize="20sp"
                android:gravity="center"
                />
<!--            <TextView-->
<!--                 android:layout_width="wrap_content"-->
<!--                 android:layout_height="wrap_content"-->
<!--                android:layout_marginLeft="50dp"-->
<!--                android:layout_marginTop="40dp"-->
<!--                android:text="5评论"-->
<!--                />-->
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_height="50dp"
                android:gravity="center"
                android:layout_marginLeft="65dp"
                android:text="20.00"
                android:layout_marginTop="65dp"
                android:textColor="#E75A48"
                android:background="#fff"
                android:textSize="27sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_alignParentRight="true"
                >

                <TextView
                    android:id="@+id/editsum"
                    android:layout_width="50dp"
                    android:layout_height="80dp"

                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    android:textColorHint="#999"
                    android:textColor="#111"
                    android:text="0"

                    android:singleLine="true"
                    android:textSize="20sp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/add"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/plus"
                    />
                <TextView
                    android:id="@+id/sub"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/sub"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="100dp"
                    />
            </RelativeLayout>


        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>