<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userActivity.loginActivity"
    android:background="#94d09f">


<TextView
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:textColor="#fff"
    android:text="欢迎您登陆点餐系统！"
    android:textSize="20dp"
    android:layout_marginTop="240dp"
    android:gravity="center_horizontal" />
    <EditText
        android:id="@+id/account"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="330dp"
        android:background="@drawable/ed_shape"
        android:textColor="#444"
        android:textColorHint="#94d09f"
        android:maxLines="1"
        android:singleLine="true"
        android:hint="请输入您的用户名/手机号"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        />

    <EditText
        android:id="@+id/pwd"
        android:textColorHint="#94d09f"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/ed_shape"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:textColor="#444"
        android:hint="请输入您的密码"
        android:textSize="20dp"
        android:maxLines="1"
        android:inputType="textPassword"
        android:password="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        />
<TextView
    android:background="@drawable/button_shape"
    android:layout_width="300dp"
    android:layout_height="50dp"
    android:id="@+id/login"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="540dp"
    android:textColor="#fff"
    android:text="登陆"
    android:textSize="20dp"
    android:gravity="center"

    />
<TextView
    android:id="@+id/forget"
    android:layout_width="150dp"
    android:layout_height="40dp"
    android:text="忘记密码？"
    android:textColor="#fff"
    android:textSize="18dp"
    android:layout_marginLeft="60dp"
    android:layout_marginTop="610dp"
    />

    <TextView
        android:id="@+id/register"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="注册"
        android:textColor="#fff"
        android:textSize="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="610dp"
        />
    <TextView
        android:id="@+id/business"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="我是商家？"
        android:textColor="#fff"
        android:textSize="15dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />
    <com.ycs.order.Util.RoundImageView
        android:id="@+id/ic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/icon1"
        app:type="circle" />




</RelativeLayout>
