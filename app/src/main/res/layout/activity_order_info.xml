<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userActivity.OrderInfoActivity"
    android:orientation="vertical"
    android:background="#efefef"
    >
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/green"
    >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:id="@+id/fanhui"
        android:src="@mipmap/greenback"
        android:layout_centerVertical="true"
        />

</RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:id="@+id/orderinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ed_shape"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/infot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="订单信息"
                    android:textColor="#222"
                    android:textSize="25sp" />


                <RelativeLayout
                    android:id="@+id/ww"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/goodslist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:orientation="vertical" />


                    <RelativeLayout
                        android:id="@+id/temp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/goodslist">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="50dp"
                            android:background="#f8f8f8" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:text="配送费"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:text="¥  2.00"
                            android:textColor="#111"
                            android:textSize="18sp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/temp1"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_below="@+id/temp">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="70dp"
                            android:gravity="center"
                            android:text="总计"
                            android:textColor="#222"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/sum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:text="0.00"
                            android:textColor="@color/red"
                            android:textSize="30sp"

                            />

                        <TextView
                            android:layout_width="20dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="23dp"
                            android:layout_toLeftOf="@+id/sum"
                            android:text="¥"
                            android:textColor="@color/red"
                            android:textSize="20sp" />

                    </RelativeLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/temp"
                        android:background="#f1f1f1" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="50dp"
                        android:background="#f8f8f8" />



                    <TextView
                        android:id="@+id/shopname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:gravity="left|center_vertical"
                        android:text="这是店铺名"
                        android:textColor="#555"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:layout_marginTop="15dp"
                        android:background="#eee" />
                    <TextView
                        android:id="@+id/call"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/temp1"
                        android:background="@drawable/pic_shape"
                        android:gravity="center"
                        android:text="致电卖家"
                        android:textColor="#222"
                        android:textSize="20sp"


                        />

                </RelativeLayout>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/wq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orderinfo"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ed_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left|center_vertical"
                    android:text="配送信息"
                    android:textColor="#555"
                    android:textSize="20sp"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="10dp"
                    android:background="#eee" />
                <RelativeLayout
                    android:id="@+id/aadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:text="配送地址"
                        android:textColor="#777"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="70dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="这是地址"
                        android:textColor="#444"


                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="50dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="配送名"
                        android:textColor="#777"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="50dp"
                        android:layout_toRightOf="@+id/name1"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="这是收货名字"
                        android:textColor="#444"

                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="90dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="配送电话"
                        android:textColor="#777"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/telephone"
                        android:layout_width="303dp"
                        android:layout_height="40dp"

                        android:layout_marginLeft="-1dp"
                        android:layout_marginTop="90dp"
                        android:layout_toRightOf="@+id/phone"
                        android:background="#fff"

                        android:gravity="center_vertical"
                        android:text="这是收货电话"
                        android:textColor="#555"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/ttime"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="130dp"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="下单时间"
                        android:textColor="#777"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="303dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="130dp"
                        android:layout_toRightOf="@+id/ttime"
                        android:background="#fff"
                        android:gravity="center_vertical"
                        android:text="下单时间"
                        android:textColor="#555"
                        android:textSize="15sp" />
                </RelativeLayout>






            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/wq"
                android:layout_alignParentBottom="true"
                android:background="#eee"
                android:id="@+id/ee"
                />

            <TextView

                android:id="@+id/commit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/ee"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="10dp"

                android:background="@drawable/yz_shape"
                android:gravity="center"
                android:text="取消订单"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/commit"
                android:background="#eee"
                />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>